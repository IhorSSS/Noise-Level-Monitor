<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/referenceTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/noise_reference_title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />
            
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/referenceLevel1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/noise_level_1"
                android:textSize="15sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/referenceLevel2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/noise_level_2"
                android:textSize="15sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/referenceLevel3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/noise_level_3"
                android:textSize="15sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/referenceLevel4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/noise_level_4"
                android:textSize="15sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/referenceLevel5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/noise_level_5"
                android:textSize="15sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/referenceLevel6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/noise_level_6"
                android:textSize="15sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/referenceLevel7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/noise_level_7"
                android:textSize="15sp"
                android:layout_marginBottom="4dp" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/closeButtonBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/close"
        android:layout_marginTop="8dp"
        style="@style/Widget.MaterialComponents.Button.TextButton" />

</LinearLayout> 